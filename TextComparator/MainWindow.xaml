<Window x:Class="TextComparator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Comparator" Height="450" Width="800" Background="#2C3E50">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="TextArea1" TextChanged="TextBox_TextChanged" Margin="5" Padding="10" 
                 VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" 
                 FontSize="16" Background="#ECF0F1" Foreground="#34495E" BorderBrush="#BDC3C7" 
                 BorderThickness="2"/>

        <TextBox x:Name="TextArea2" TextChanged="TextBox_TextChanged" Grid.Row="1" Margin="5,4,5,4" Padding="10" 
                 VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" 
                 FontSize="16" Background="#ECF0F1" Foreground="#34495E" BorderBrush="#BDC3C7" 
                 BorderThickness="2"/>

        <TextBlock x:Name="SimilarityText" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="20" FontWeight="Bold" Margin="5" Foreground="#FFFFFF"/>
    </Grid>
</Window>
